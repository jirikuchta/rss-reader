{
	"devDependencies": {
		"less": "^3.11.1",
		"rollup": "^1.32.0",
		"rollup-plugin-typescript": "^1.0.1",
		"typescript": "^3.8.3",
		"concurrently": "^5.1.0",
		"chokidar": "^3.3.1",
		"chokidar-cli": "^2.1.0"
	},
	"scripts": {
		"watch": "concurrently --kill-others \"npm run watch-js\" \"npm run watch-css\"",
		"watch-js": "rollup -i src/js/app.ts -o static/app.js --plugin typescript -w",
		"watch-css": "chokidar \"src/css/**/*.less\" -c \" npm run build-css\"",
		"build-css": "lessc src/css/app.less static/app.css"
	}
}
